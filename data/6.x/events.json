{
  "settings": {
    "analysis": {
      "filter": {
        "nGram_filter": {
          "type": "nGram",
          "min_gram": 1,
          "max_gram": 36,
          "token_chars": [
            "letter",
            "digit",
            "punctuation",
            "symbol"
          ]
        },
        "truncate_filter": {
          "type": "truncate",
           "length": 36
        }
      },
      "analyzer": {
        "nGram_analyzer": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "truncate_filter",
            "lowercase",
            "asciifolding",
            "nGram_filter"
          ]
        },
        "whitespace_analyzer": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "truncate_filter",
            "lowercase",
            "asciifolding"
          ]
        },
        "email_analyzer": {
          "type": "custom",
          "tokenizer": "uax_url_email",
          "filter": [
            "lowercase",
            "stop"
          ]
        }
      }
    }
  },
  "mappings": {
    "events": {
      "_all": {
        "analyzer": "nGram_analyzer",
        "search_analyzer": "whitespace_analyzer"
      },
      "properties": {
        "uid": {
          "type": "keyword"
        },
        "calendarId": {
          "type": "keyword"
        },
        "userId": {
          "type": "keyword"
        },
        "sequence": {
          "type": "text",
          "analyzer": "nGram_analyzer",
          "search_analyzer": "whitespace_analyzer"
        },
        "summary" : {
          "type": "text",
          "analyzer": "nGram_analyzer",
          "search_analyzer": "whitespace_analyzer"
        },
        "description" : {
          "type": "text",
          "analyzer": "nGram_analyzer",
          "search_analyzer": "whitespace_analyzer"
        },
        "allDay": {
          "type": "boolean"
        },
        "durationInDays": {
          "type": "short"
        },
        "start" : {
          "type": "date"
        },
        "end" : {
          "type": "date"
        },
        "dtstamp": {
          "type": "date"
        },
        "isRecurrenceMaster": {
          "type": "boolean"
        },
        "recurrenceId": {
          "type": "date"
        },
        "class": {
          "type": "keyword"
        },
        "organizer" : {
          "properties": {
            "email": { 
              "type": "keyword",
              "fields": {
                "full": {
                  "type": "text",
                  "analyzer": "email_analyzer"
                }
              }
            },
            "cn": {
              "type": "text",
              "analyzer": "nGram_analyzer",
              "search_analyzer": "whitespace_analyzer"
            }
          }
        },
        "attendees" : {
          "properties": {
            "email": {
              "type": "text",
              "analyzer": "nGram_analyzer",
              "search_analyzer": "whitespace_analyzer",
              "fields": {
                "full": {
                  "type": "text",
                  "analyzer": "email_analyzer"
                }
              }
            },
            "cn": {
              "type": "text",
              "analyzer": "nGram_analyzer",
              "search_analyzer": "whitespace_analyzer"
            }
          }
        }
      }
    }
  }
}
